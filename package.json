{
  "name": "stratix",
  "version": "0.1.0",
  "description": "Stratix 星策系统 - 基于 Phaser RTS 游戏化界面的多 Agent 可视化指挥平台",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "nodemon --watch src --ext ts,json --exec \"tsx src/stratix-gateway/index.ts\"",
    "dev:frontend": "vite",
    "test:rts": "vite --config vite.test-rts.config.ts",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "tsc && tsc-alias",
    "build:frontend": "vite build",
    "typecheck": "tsc --noEmit",
    "typecheck:app": "tsc -p tsconfig.app.json --noEmit",
    "lint": "eslint src/**/*.ts",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "clean": "rm -rf dist",
    "start": "node dist/stratix-gateway/index.js",
    "start:dev": "tsx src/stratix-gateway/index.ts",
    "electron": "npm run build:electron && electron . --config electron.config.json",
    "electron:dev": "concurrently \"npm run dev:frontend\" \"npm run build:electron && electron . --config electron.config.json\"",
    "electron:build": "npm run build && npm run build:electron && electron-builder --config electron.config.json",
    "build:electron": "tsc -p tsconfig.electron.json",
    "tailscale:test": "tsx src/stratix-tailscale/test-embedded.ts",
    "tailscale:login": "tsx src/stratix-tailscale/interactive-login.ts"
  },
  "keywords": [
    "stratix",
    "ai",
    "agent",
    "rts",
    "phaser",
    "openclaw",
    "tailscale"
  ],
  "author": "Stratix Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.13.5",
    "cors": "^2.8.6",
    "dotenv": "^17.3.1",
    "element-plus": "^2.13.2",
    "express": "^5.2.1",
    "fs-extra": "^11.2.0",
    "http-proxy-middleware": "^3.0.5",
    "lowdb": "^7.0.1",
    "mitt": "^3.0.1",
    "phaser": "^3.90.0",
    "vue": "^3.5.28",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.19.33",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitejs/plugin-vue": "^6.0.4",
    "concurrently": "^9.2.1",
    "electron": "^40.6.0",
    "electron-builder": "^26.8.1",
    "eslint": "^8.56.0",
    "nodemon": "^3.1.13",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3",
    "vite": "^7.3.1"
  }
}
